{
    "app-id" : "com.jonathankang.Weibird",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.32",
    "sdk" : "org.gnome.Sdk",
    "command" : "weibird",
    "finish-args" : [
        "--device=dri",
        "--share=ipc",
        "--share=network",
        "--socket=wayland",
        "--socket=x11",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig"
    ],
    "modules" : [
        {
            "name" : "librest",
            "sources" : [
                {
                    "type"   : "archive",
                    "url"    : "https://download.gnome.org/sources/rest/0.7/rest-0.7.93.tar.xz",
                    "sha256" : "c710644455340a44ddc005c645c466f05c0d779993138ea21a62c6082108b216"
                }
            ]
        },
        {
            "name" : "weibird",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://github.com/JonathanKang/weibird/archive/weibird-0.1.6.tar.gz",
                    "sha256" : "9a98914b6f6fd0814015a0d42082d5574b79c0152bfe543f05265ae27b5dca2f"
                }
            ],
            "post-install": [
                "for size in 64 128 256 512; do
                    rsvg-convert -w $size -h $size -f png -o $size.png /app/share/icons/hicolor/scalable/apps/com.jonathankang.Weibird.svg
                    install -Dm644 $size.png /app/share/icons/hicolor/${size}x${size}/apps/com.jonathankang.Weibird.png
                  done"
            ]
        }
    ]
}
